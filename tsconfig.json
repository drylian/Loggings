{
  "ts-node": {
      "require": [
          "tsconfig-paths/register"
      ]
  },
  "compilerOptions": {
      "allowJs": true,
      "target": "ESNext",
      "module": "ES2022",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "jsx": "react-jsx",
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "strict": true,
      "types": [
        "node"
      ],
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "samp"
  ]
}